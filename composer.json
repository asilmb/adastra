{
    "name": "asilmb/adastra",
    "description": "Test Task",
    "type": "project",
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "AppTests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "phpstan/phpstan": "^0.12.77"
    },
    "config": {
        "platform": {
            "php": "7.4"
        }
    },
    "scripts": {
        "up":
        [
            "docker-compose up -d",
            "docker exec adastra composer i"
        ],
        "check": {
            "codestyle": "@codestyle",
            "test": "@test"
        },
        "fix": "phpcbf",
        "test": ["docker exec adastra php ./vendor/bin/phpunit tests/" ],
        "export": ["docker exec adastra bash ./export.sh -v /var/www/assets/config.xml" ]

    }
}
